<Page x:Class="aeroflot.avtorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:aeroflot"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="avtorization">

    <Grid Height="338" Width="800">
        <TextBox x:Name="login" HorizontalAlignment="Center" Margin="0,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="290" Height="38" TextChanged="login_TextChanged"/>
        <PasswordBox x:Name="password" HorizontalAlignment="Center" Margin="0,131,0,0"  VerticalAlignment="Top" Width="290" Height="38" />
        <Button x:Name="vxod" Content="Войти" HorizontalAlignment="Center" VerticalAlignment="Top" Height="31" Width="290" Click="vxod_Click" Margin="0,196,0,0"/>
        <Button x:Name="reg" Content="Зарегистрироваться" HorizontalAlignment="Center" VerticalAlignment="Top" Height="34" Width="290" Margin="0,243,0,0" Click="reg_Click"/>
        <Label Content="Пароль" HorizontalAlignment="Center" Margin="0,95,0,0" VerticalAlignment="Top" Height="31" Width="72" FontSize="18"/>
        <Label Content="Логин" HorizontalAlignment="Center" Margin="0,26,0,0" VerticalAlignment="Top" Height="31" Width="72" FontSize="18"/>

    </Grid>
</Page>
