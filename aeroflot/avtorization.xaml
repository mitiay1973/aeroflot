<Page x:Class="aeroflot.avtorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:aeroflot"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="avtorization">

    <Grid Height="338" Width="800">
        <TextBox x:Name="login" HorizontalAlignment="Center" Margin="0,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="290" Height="38" TextChanged="login_TextChanged"/>
        <TextBox x:Name="password" HorizontalAlignment="Center" Margin="0,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="290" Height="38" TextChanged="password_TextChanged"/>
        <Button x:Name="vxod" Content="Войти" HorizontalAlignment="Center" VerticalAlignment="Center" Height="62" Width="264" Click="vxod_Click"/>
        <Button x:Name="reg" Content="Зарегистрироваться" HorizontalAlignment="Center" VerticalAlignment="Top" Height="62" Width="264" Margin="0,215,0,0" Click="reg_Click"/>

    </Grid>
</Page>
