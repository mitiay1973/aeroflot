<Page x:Class="aeroflot.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:aeroflot"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration">

    <Grid Height="338" Width="800">
        <TextBox x:Name="login" HorizontalAlignment="Center" Margin="0,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="290" Height="38" TextChanged="login_TextChanged" />
        <TextBox x:Name="password" HorizontalAlignment="Center" Margin="0,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="290" Height="38" TextChanged="password_TextChanged" />
        <Button x:Name="registration" Content="Зарегистрироваться" HorizontalAlignment="Center" VerticalAlignment="Top" Height="62" Width="264"  Margin="0,187,0,0" Click="registration_Click" />
        <TextBox x:Name="password_Copy" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="290" Height="38"  Margin="0,118,0,0" TextChanged="password_Copy_TextChanged"/>
    </Grid>
</Page>
